---
import ServiceCard from '../../element/ServiceCard.astro';
const services = [
  {
    title: 'Techo de Tejas',
    description:
      'Descubra la belleza y funcionalidad de nuestros techos de tejas, ideales para cualquier hogar.',
    image: 'https://pub-c0f5f950f13841e8b14919b84237d411.r2.dev/f1.webp',
  },
  {
    title: 'Techo Moderno',
    description:
      'Construidos con materiales de última generación, combinamos durabilidad y estilo.',
    image: 'https://pub-c0f5f950f13841e8b14919b84237d411.r2.dev/f2.webp',
  },
  {
    title: 'Techo de Vidrio',
    description:
      'Perfectos para espacios modernos, estos techos maximizan la entrada de luz natural.',
    image: 'https://pub-c0f5f950f13841e8b14919b84237d411.r2.dev/f3.webp',
  },
];
---

<section class="bg-black text-white py-16" id="servicios">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold tracking-wide font-ptSerif uppercase">Nuestros Servicios</h2>
  </div>
  <div class="container mx-auto flex lg:flex-wrap flex-nowrap justify-start lg:justify-center gap-10 overflow-x-auto scrollbar-hide">
    {services.map(service => (
      <ServiceCard 
        title={service.title}
        description={service.description}
        image={service.image}
      />
    ))}
  </div>
</section>
