---
import ServiceCard from '../../element/ServiceCard.astro';
import services from '../../data/serviceData.ts';
---

<section class="bg-black text-white py-16" id="servicios">
  <div class="text-center mb-12">
    <h2 class="text-3xl font-bold tracking-wide font-ptSerif uppercase">Nuestros Servicios</h2>
  </div>
  <div class="container mx-auto flex lg:flex-wrap flex-nowrap justify-start lg:justify-center gap-10 overflow-x-auto scrollbar-hide">
    {services.map(service => (
      <ServiceCard 
        title={service.title}
        description={service.description}
        image={service.image}
      />
    ))}
  </div>
</section>
