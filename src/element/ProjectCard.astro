---
export interface Props {
  image: string;
  title: string;
  description: string;
  link: string;
  reverse: boolean;
}

const { image, title, description, link, reverse } = Astro.props;
---

<div 
  class={`container mx-auto flex flex-col ${reverse ? 'lg:flex-row-reverse' : 'lg:flex-row'} items-center gap-10 px-14 lg:px-14 py-8 mb-16 opacity-0 translate-y-10 transition-all duration-700`}
  data-animate
>

  <div class="lg:w-1/2">
    <img
      src={image}
      alt={title}
      class="w-full h-auto rounded-lg shadow-lg object-cover"
    />
  </div>

  <div class="lg:w-1/2 text-center lg:text-left">
    <h3 class="text-2xl font-bold mb-4 font-ptSerif">{title}</h3>
    <p class="text-lg mb-6 font-hind">{description}</p>
    <a href={link} class="text-lg font-bold text-white hover:underline">
      Ver m√°s proyectos
    </a>
  </div>
</div>
